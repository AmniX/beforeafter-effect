<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xenione.demos.afterbefore.MainActivity">

    <com.xenione.demos.afterbefore.AfterBeforeCoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/backgroundView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/after" />

        <com.xenione.libs.swipemaker.SwipeLayout
            android:id="@id/foregroundView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foreground_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/before"/>

        </com.xenione.libs.swipemaker.SwipeLayout>

    </com.xenione.demos.afterbefore.AfterBeforeCoordinatorLayout>

</FrameLayout>

